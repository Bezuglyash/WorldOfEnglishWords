<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cd4a4c">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="167dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="28dp"
        app:cardCornerRadius="19dp"
        app:cardElevation="12dp">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:rowCount="6"
            app:columnCount="2">
            <TextView
              android:id="@+id/tv_result"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:textSize="28sp"
              android:textAlignment="center"
              android:textColor="#012169"
              android:textStyle="bold"
              app:layout_row="0"
              app:layout_columnSpan="2"
              android:gravity="center"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:text="Процент правильных ответов"
              android:textSize="15sp"
              app:layout_row="1"
              app:layout_column="0"
              android:gravity="center"
              android:background="@drawable/left_line"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_percent_test"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:textSize="15sp"
              app:layout_row="1"
              app:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:text="Количество слов"
              android:textSize="15sp"
              app:layout_row="2"
              app:layout_column="0"
              android:background="@drawable/left_line"
              android:gravity="center"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_all_words_test"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:textSize="15sp" 
              app:layout_row="2"
              app:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:text="Правильных ответов"
              android:textSize="15sp" 
              app:layout_row="3"
              app:layout_column="0"
              android:background="@drawable/left_line"
              android:gravity="center"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_correct_answers_test"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:textSize="15sp" 
              app:layout_row="3"
              app:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:text="Оценка"
              android:textSize="15sp"
              app:layout_row="4"
              app:layout_column="0"
              android:gravity="center"
              android:background="@drawable/left_line"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_rating_test"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_rowWeight="1"
              app:layout_columnWeight="1"
              android:textSize="15sp"
              app:layout_row="4"
              app:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="5"
                app:layout_columnSpan="2"
                android:rowCount="1"
                android:columnCount="2"
                android:padding="4dp">
                <Button
                    android:id="@+id/btn_errors_in_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Ошибки"
                    android:textSize="15sp"
                    android:textColor="#C8102E"
                    android:layout_row="0"
                    android:layout_column="0"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Продолжить"
                    android:textSize="15sp"
                    android:textColor="#012169"
                    android:layout_row="0"
                    android:layout_column="1"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </GridLayout>
        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
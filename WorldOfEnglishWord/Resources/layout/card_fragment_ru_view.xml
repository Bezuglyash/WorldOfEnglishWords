<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#cd4a4c">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="167dp"
        android:layout_marginHorizontal="28dp"
        app:cardCornerRadius="19dp"
        app:cardElevation="12dp">
        <GridLayout
          android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:rowCount="5"
            android:columnCount="2">
            <TextView
              android:id="@+id/word_ru"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:textSize="28sp"
              android:textAlignment="center"
              android:textColor="#012169"
              android:textStyle="bold"
              android:layout_row="0"
              android:layout_columnSpan="2"
              android:gravity="center"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:text="Процент правильных ответов"
              android:textSize="15sp"
              android:layout_row="1"
              android:layout_column="0"
              android:gravity="center"
              android:background="@drawable/left_line"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_percent_ru"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:textSize="15sp"
              android:layout_row="1"
              android:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:text="Всего ответов"
              android:textSize="15sp"
              android:layout_row="2"
              android:layout_column="0"
              android:background="@drawable/left_line"
              android:gravity="center"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_all_answers_ru"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:textSize="15sp" 
              android:layout_row="2"
              android:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:text="Правильных ответов"
              android:textSize="15sp" 
              android:layout_row="3"
              android:layout_column="0"
              android:background="@drawable/left_line"
              android:gravity="center"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_correct_answers_ru"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:textSize="15sp" 
              android:layout_row="3"
              android:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:text="Оценка"
              android:textSize="15sp"
              android:layout_row="4"
              android:layout_column="0"
              android:gravity="center"
              android:background="@drawable/left_line"
              android:textColor="#012169"/>
            <TextView
              android:id="@+id/tv_rating_ru"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_rowWeight="1"
              android:layout_columnWeight="1"
              android:textSize="15sp"
              android:layout_row="4"
              android:layout_column="1"
              android:background="@drawable/right_line"
              android:gravity="center"
              android:textColor="#012169"/>

        </GridLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
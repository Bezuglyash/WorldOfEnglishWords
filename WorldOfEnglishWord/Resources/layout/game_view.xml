<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#cd4a4c"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="167dp"
        android:layout_marginHorizontal="28dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rowCount="4"
            app:columnCount="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="0"
                app:layout_columnSpan="2"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="Угадай слово"
                android:textSize="28sp"
                android:textColor="#012169"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="Количество игр"
                android:textSize="19sp"
                android:textColor="#012169"
                android:gravity="center_vertical"
                android:paddingStart="12dp"/>
            <TextView
                android:id="@+id/tv_count_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:textSize="19sp"
                android:textColor="#012169"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="Количество очков"
                android:textSize="19sp"
                android:textColor="#012169"
                android:gravity="center_vertical"
                android:paddingStart="12dp"/>
            <TextView
                android:id="@+id/tv_number_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:textSize="19sp"
                android:textColor="#012169"
                android:gravity="center"/>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_columnSpan="2"
                android:rowCount="1"
                android:columnCount="2"
                android:padding="4dp">
                <Button
                    android:id="@+id/btn_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Информация"
                    android:textSize="16sp"
                    android:textColor="#C8102E"
                    android:layout_row="0"
                    android:layout_column="0"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="Играть"
                    android:textSize="16sp"
                    android:textColor="#012169"
                    android:layout_row="0"
                    android:layout_column="1"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </GridLayout>
        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>